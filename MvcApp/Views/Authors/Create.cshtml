@model CreateAuthorDTO

<div class="container mt-4">
    <h2>Create Author</h2>

    <form asp-action="Create" method="post" class="w-50">
        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control form-control-sm" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Country" class="form-label"></label>
            <input asp-for="Country" class="form-control form-control-sm" />
            <span asp-validation-for="Country" class="text-danger"></span>
        </div>     

        <div class="mb-3">
            <label asp-for="BirthDate" class="form-label"></label>
            <input asp-for="BirthDate" class="form-control form-control-sm" type="date" />
            <span asp-validation-for="BirthDate" class="text-danger"></span>
        </div>

        <div class="d-flex gap-3 mt-3">
            <button type="submit" class="btn btn-primary btn-sm">Create</button>
            <a asp-action="Index" class="btn btn-danger btn-sm">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}